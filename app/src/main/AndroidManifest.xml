<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upsocl.appupsocl">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <!-- Actividad principal - Login -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.segundary">

        </activity>

        <!-- Create preferences -->
        <activity
            android:name=".CreatePerfil"
            android:theme="@style/AppTheme.segundary">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Facebook -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- home -->
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />
        </activity>

        <!-- Resultado de busqueda -->
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <!-- Detalle del Post -->
        <activity
            android:name=".DetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.fragments.PreferencesFragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.fragments.HelpFragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.fragments.CategoryFragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.fragments.HomeGreenActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.fragments.HomeWomenActivity" />
        <activity android:name=".ui.fragments.HomeFoodActivity" />
        <activity android:name=".ui.fragments.HomeNewsActivity" />
        <activity android:name=".ui.fragments.HomePopularyActivity" />
        <activity android:name=".ui.fragments.BookmarksFragment"></activity>
    </application>

</manifest>