<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/viewPrimary">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cardtextColor"
            android:weightSum="1"
            android:id="@+id/viewDetailLinear"
            tools:ignore="WebViewLayout">

            <ImageView
                android:layout_margin="@dimen/margin_webview"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/heigny_image_detail"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:id="@+id/imageViewDetail" />

            <TextView
                android:layout_marginLeft="@dimen/margin_webview"
                android:layout_marginRight="@dimen/margin_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailTextView"
                android:paddingTop="@dimen/margin_webview"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="@dimen/margin_webview"
                android:layout_marginRight="@dimen/margin_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="primary"
                android:id="@+id/detail" />

            <com.google.android.gms.ads.AdView
                android:layout_marginTop="5dp"
                android:id="@+id/adView_primary_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>

            <WebView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/webView"
                android:layout_margin="@dimen/margin_webview"
                android:layout_weight="1" />

            <com.google.android.gms.ads.AdView
                android:layout_marginTop="5dp"
                android:id="@+id/adView_primary_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
                android:layout_marginBottom="50dp">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>