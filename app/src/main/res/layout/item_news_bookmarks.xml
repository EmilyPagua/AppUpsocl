<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#BDBDBD"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_post_bookmark"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title_post_bookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_post_bookmark"
            android:maxLines="3"
            android:padding="5dp"
            android:textColor="#222"
            android:text="Titulo"
            android:textStyle="bold"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_post_bookmark"
            android:padding="2dp"
            android:text="Descripcion"
            android:textColor="#666"
            android:id="@+id/data_post_bookmark"
            android:textSize="12dp" />

        <View
            android:id="@+id/line1"
            android:layout_below="@+id/data_post_bookmark"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/cardBgColor"/>

            <ImageButton
                android:background="#BDBDBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ima_bookmarks"
                android:layout_below="@+id/line1"
                android:onClick="share"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_bookmark_white_36dp"/>

            <ImageButton
                android:background="#BDBDBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ima_share"
                android:src="@drawable/ic_share_white_36dp"
                android:layout_below="@+id/line1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

    </RelativeLayout>
</android.support.v7.widget.CardView>

